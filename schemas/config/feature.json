{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "properties": {
        "Content": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": ["Features", "Fixes", "Legacy Windows Panels"]
        },
        "panel": {
          "type": "string",
          "pattern": "^\\d+$"
        },
        "Order": {
          "type": "string",
          "pattern": "^[0-9a-f]+_$"
        },
        "feature": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "InvokeScript": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "UndoScript": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Type": {
          "type": "string",
          "enum": ["Button"]
        },
        "ButtonWidth": {
          "type": "string",
          "pattern": "^\\d+$"
        }
      },
      "required": ["Content", "category", "panel"],
      "additionalProperties": false
    }
  }
}
